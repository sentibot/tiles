<form class="form-horizontal" role="form" enctype="multipart/form-data" method="POST" action="/collections/tile-photos">
    <div class="form-group">
        <label for="fieldName" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="fieldName" name="name" value="{{form.name}}">
        </div>
    </div>
    <div class="form-group">
        <label for="fieldEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-4">
            <input type="email" class="form-control" id="fieldEmail" name="email" value="{{form.email}}">
        </div>
    </div>
    <div class="input-group mb-3 col-sm-4">
        <div class="input-group-prepend">
            <span class="input-group-text">Upload</span>
        </div>
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="fieldPhoto" name="photo" accept="image/*">
            <label class="custom-file-label" for="fieldPhoto">Choose image</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>